<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/after">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Centymetry"
        android:id="@+id/textCentimeters"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editCentimeters"
        android:layout_alignBottom="@+id/textCentimeters"
        android:layout_toRightOf="@+id/textCentimeters"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cale"
        android:id="@+id/textInches"
        android:layout_below="@+id/textCentimeters"
        android:layout_toLeftOf="@+id/editCentimeters"
        android:layout_toStartOf="@+id/editCentimeters"
        android:layout_marginTop="73dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editInches"
        android:layout_alignBottom="@+id/textInches"
        android:layout_alignLeft="@+id/editCentimeters"
        android:layout_alignStart="@+id/editCentimeters" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert"
        android:id="@+id/buttonConvert"
        android:layout_below="@+id/textInches"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="127dp" />
</RelativeLayout>
